{
  "name": "NameMC Extras (Beta)",
  "description": "A extension which adds extra features to NameMC!",
  "author": "Faav",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "version": "3.4.2",
  "content_scripts": [
    {
      "js": [
        "js/data-preload.js",
        "js/page-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "css": [
        "css/NameMC.css"
      ],
      "matches": [
        "*://*.namemc.com/*"
      ]
    },
    {
      "css": [
        "css/CustomPage.css"
      ],
      "matches": [
        "*://*.namemc.com/extras/*"
      ]
    },
    {
      "js": [
        "js/badge-page/badge-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/extras/badge/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/capes-page/capes-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/capes"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/capes-page/official-cape-page/official-cape-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/cape/*"
      ],
      "exclude_matches": [
        "*://*.namemc.com/cape/*/*"
      ],
      "run_at": "document_start"
    },
    {
      "css": [
        "css/CustomPage.css"
      ],
      "js": [
        "js/capes-page/custom-cape-page/custom-cape-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/cape/*/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/skin-page/official-skin-page/official-skin-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/skin/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/profile-page/profile-injector.js"
      ],
      "matches": [
        "*://*.namemc.com/profile/*"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
        "/*"
  ],
  "permissions": [
    "https://raw.githubusercontent.com/*"
  ]
}
